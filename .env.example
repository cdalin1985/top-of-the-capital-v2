# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="file:./prisma/dev.db"

# Authentication (REQUIRED - Generate strong secrets in production)
JWT_SECRET=your_secure_jwt_secret_at_least_32_characters_long
JWT_EXPIRES_IN=7d
JWT_ISSUER=capital-ladder-app
JWT_AUDIENCE=capital-ladder-users

# Security
ALLOWED_VENUES="Valley Hub,Eagles 4040"
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Push Notifications (Generate using npm run generate-vapid-keys)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=your_email@domain.com

# Logging
LOG_LEVEL=debug
ENABLE_FILE_LOGGING=false
LOG_DB_QUERIES=false

# Admin (for seeding)
ADMIN_SECRET=your_admin_secret_for_seeding_operations

# Development Tools
PRISMA_CLI_QUERY_ENGINE_TYPE=binary